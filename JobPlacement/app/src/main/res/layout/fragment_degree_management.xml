<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:alpha="1"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementDegreeFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardMaxElevation="5dp"
        card_view:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/add_degree_text_view_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/ColorPrimary"
                android:text="Degree:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:weightSum="7"
                android:id="@+id/degree_basics_container">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/degreetype"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/student_degreetype_icon"/>

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/degree_management_spinnerType" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/degree_management_spinnerField" />

            </LinearLayout>

            <TextView
                android:id="@+id/degree_management_text_view_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="@color/ColorPrimary"
                android:text="Mark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7"
                android:id="@+id/degree_mark_container"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/mark"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/student_degreemark_icon"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="insert"
                    android:layout_weight="3"
                    android:textSize="20dp"
                    android:textColor="@color/ColorPrimaryDark"
                    android:id="@+id/degree_management_mark_area"/>

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:id="@+id/degree_management_loud_switch"
                    android:showText="true"
                    android:textOn="Loud"
                    android:textOff="No Loud"
                    />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/degree_date_container">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/date"
                    android:layout_margin="3dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/student_degreedate_icon"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Degree date:"
                        android:textSize="20dp"
                        android:textColor="@color/ColorPrimary"
                        android:id="@+id/degree_management_date_area" />
                    <DatePicker
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:calendarViewShown="false"
                        android:id="@+id/degree_management_datePicker" />


                </LinearLayout>
            </GridLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:background="@color/ColorPrimary"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:layout_margin="4dp"
                android:id="@+id/degree_management_delete_button"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
