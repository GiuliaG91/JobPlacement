<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_student__profile_management_basics"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementBasicsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Name:"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/student_name_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/student_surname_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Surname:"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/student_surname_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/student_sex_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Sex:"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/student_sex_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/student_birth_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Date of birth:"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/student_birth_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:padding="20dp"
                />

            <TextView
                android:id="@+id/student_email_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Email address:"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/student_email_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:padding="20dp"
                />



        </LinearLayout>

    </ScrollView>



</FrameLayout>
