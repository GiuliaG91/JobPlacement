<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_student__profile_management_skills"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementSkillsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_degreeType_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Degree Type:"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/student_degreeType_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="No Degree Type"
                />

            <TextView
                android:id="@+id/student_mark_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Mark:"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/student_mark_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="No Surame"
                />

            <TextView
                android:id="@+id/student_field_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Field:"
                android:textSize="20dp"
                />
            <EditText
                android:id="@+id/student_field_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="No Field"
                />

            <TextView
                android:id="@+id/student_skills_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Skills:"
                android:textSize="20dp"
                />




        </LinearLayout>

    </ScrollView>



</FrameLayout>
