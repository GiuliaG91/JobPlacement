<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_student__profile_management_skills"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementSkillsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/student_degreeList_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ListView
                android:id="@+id/skills_degree_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
            <Button
                android:id="@+id/skills_add_degree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Degree"/>

            <TextView
                android:id="@+id/student_languages_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Languages:"
                android:textSize="20dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/student_languages_container">

                <Button
                    android:id="@+id/student_languages_plusButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="+"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>



</FrameLayout>
