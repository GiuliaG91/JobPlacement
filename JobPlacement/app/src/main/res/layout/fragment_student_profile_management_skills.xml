<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag_student__profile_management_skills"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementSkillsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/student_languageList_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/skills_language_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
                <Button
                    android:id="@+id/skills_add_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Language"/>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/student_degreeList_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/skills_degree_listview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </ListView>
                <Button
                    android:id="@+id/skills_add_degree"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Degree"/>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</FrameLayout>
