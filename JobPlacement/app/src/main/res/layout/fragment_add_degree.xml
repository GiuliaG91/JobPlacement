<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giuliagigi.jobplacement.AddDegreeFragment">


    <TextView
        android:id="@+id/add_degree_text_view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Degree type"/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_degree_spinnerType" />

    <TextView
        android:id="@+id/add_degree_text_view_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Field"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/add_degree_spinnerField" />

    <TextView
        android:id="@+id/add_degree_text_view_mark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mark"/>

    <EditText
        android:id="@+id/add_degree__mark_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:id="@+id/add_degree_confirm_button"/>


</FrameLayout>
