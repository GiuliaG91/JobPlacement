

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.giuliagigi.jobplacement.ProfileDeleteFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textColor="@color/ColorPrimary"
                android:text="Delete your profile"
                android:id="@+id/textView2"
                android:padding="10dp"
                android:layout_gravity="center_horizontal|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ColorPrimaryDark"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="We are sorry you decidede to delte your profile. Would you help us understand how to improve our app?"
                android:id="@+id/textView3"
                android:padding="6dp"
                android:layout_gravity="center_horizontal|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:text="Why are you deleting your account?"
                android:id="@+id/textView4"
                android:textColor="@color/ColorPrimary"
                android:padding="10dp"
                android:layout_gravity="left" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileDelete_foundJob_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textSize="17sp"
                    android:text="I just found a job"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileDelete_badApp_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textSize="17sp"
                    android:text="I found hard to understand the app"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileDelete_fewUsers_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textSize="17sp"
                    android:text="There are not enough users"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileDelete_other_checkBox"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textSize="17sp"
                    android:text="None of the preavious"/>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profileDelete_otherReason_text"
                android:hint="write the reason"
                android:layout_marginLeft="28dp"
                android:textColor="@color/ColorPrimaryDark"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="27sp"
                android:textColor="@color/ColorPrimary"
                android:text="Do you have some hints?"
                android:id="@+id/textView5"
                android:padding="10dp"
                android:layout_gravity="left" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:id="@+id/profileDelete_hints_text"
                android:hint="Don't be shy!"
                android:layout_gravity="center_horizontal" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="12dp"
                android:text="Confirm"
                android:background="@drawable/button_background"
                android:textColor="@color/ColorPrimaryDark"
                android:id="@+id/profileDelete_confirmButton"
                android:textSize="20sp"/>

        </LinearLayout>



    </ScrollView>





