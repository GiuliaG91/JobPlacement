<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.giuliagigi.jobplacement.StudentProfileManagementLanguageFragment">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="insert language"
        android:id="@+id/language_management_description_area"/>

    <TextView
        android:id="@+id/add_language_text_view_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Level: "/>


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/language_management_spinnerLevel" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Changes"
        android:id="@+id/language_management_confirm_button"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:id="@+id/language_management_delete_button"/>


</FrameLayout>
