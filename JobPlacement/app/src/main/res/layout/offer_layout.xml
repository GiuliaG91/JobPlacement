<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_show_offer"
    tools:context="com.example.giuliagigi.jobplacement.NewOffer">




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/Show_OfferScrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/new_offer_fragment_intro"
                android:id="@+id/showOffer_tv1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_basic_info"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="370dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:background="@drawable/border_card_offer">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/offerObject_tv"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@android:color/white"
                        android:paddingLeft="10dp" />



                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/tabsScrollColor"></RelativeLayout>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/fieldOffer_tv"
                        android:layout_weight="1.2"
                        android:layout_margin="2dp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/tabsScrollColor"></RelativeLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/offerAvailability_tv"
                        android:layout_weight="1"
                        android:backgroundTint="#ffffffff"
                        android:background="@null"
                        android:layout_margin="1dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="10dp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/tabsScrollColor"></RelativeLayout>




                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/validity_tv"
                            android:layout_weight="1"
                            android:layout_margin="1dp"
                            android:layout_marginTop="5dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical" />




                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/tabsScrollColor"></RelativeLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:id="@+id/typeContract_tv"
                        android:layout_weight="1.2"
                        android:layout_margin="1dp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/tabsScrollColor"></RelativeLayout>


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/contractDuration_tv"
                        android:layout_weight="1.2" />


                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/tabsScrollColor"></RelativeLayout>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:id="@+id/offerLocation_tv"
                        android:layout_weight="1"
                        android:backgroundTint="@android:color/white"
                        android:background="@null"
                        android:layout_margin="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:paddingLeft="10dp" />



                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/tabsScrollColor"></RelativeLayout>


                        <EditText
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:id="@+id/offerSalary_tv"
                            android:layout_weight="1"
                            android:backgroundTint="@android:color/white"
                            android:background="@null"
                            android:layout_margin="1dp"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="5dp" />


                </LinearLayout>
            </android.support.v7.widget.CardView>




            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/new_offer_fragment_Description"
                android:id="@+id/newOffer_tv3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CardDescription"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                card_view:cardCornerRadius="4dp">



                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/DescriptionText_tv"
                        android:background="@null"
                        android:backgroundTint="@android:color/white"/>


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/show_offer_fragment_tags"
                android:id="@+id/tags_tv"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:id="@+id/tagContainder"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"></LinearLayout>



        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/modyfy_offer"
        android:text="@string/new_offer_fragment_button"
        android:background="@color/tabsScrollColor"
        android:textColor="@android:color/white"/>
</LinearLayout>
