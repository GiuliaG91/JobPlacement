<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_new_offer"
    tools:context="com.example.giuliagigi.jobplacement.NewOffer">




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/OfferScrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/new_offer_fragment_intro"
                android:id="@+id/newOffer_tv1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_basic_info"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="370dp"
                card_view:cardCornerRadius="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >


             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:orientation="vertical"
                 android:background="@drawable/border_card_offer">


                 <EditText
                     android:layout_width="fill_parent"
                     android:layout_height="0dp"
                     android:id="@+id/offerObject"
                     android:layout_weight="1"
                     android:background="@null"
                     android:backgroundTint="@android:color/white"
                     android:maxLines="1"
                     android:singleLine="true"
                     android:hint="@string/new_offer_fragment_hint_object"
                     android:paddingLeft="10dp" />



                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="1dp"
                     android:background="@color/tabsScrollColor"></RelativeLayout>


                 <Spinner
                     android:layout_width="fill_parent"
                     android:layout_height="0dp"
                     android:id="@+id/fieldOffer"
                     android:layout_weight="1.2"
                     android:layout_margin="2dp" />

                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="1dp"
                     android:background="@color/tabsScrollColor"></RelativeLayout>

                 <EditText
                     android:layout_width="fill_parent"
                     android:layout_height="0dp"
                     android:inputType="numberDecimal"
                     android:ems="10"
                     android:id="@+id/offerAvailability"
                     android:layout_weight="1"
                     android:backgroundTint="#ffffffff"
                     android:hint="@string/new_offer_fragment_hint_number_of_place"
                     android:singleLine="true"
                     android:maxLines="1"
                     android:background="@null"
                     android:layout_margin="1dp"
                     android:layout_marginTop="5dp"
                     android:paddingLeft="10dp" />

                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="1dp"
                     android:background="@color/tabsScrollColor"></RelativeLayout>


                 <LinearLayout
                     android:orientation="horizontal"
                     android:layout_width="fill_parent"
                     android:layout_height="0dp"
                     android:layout_weight="1">

                     <TextView
                         android:layout_width="0dp"
                         android:layout_height="fill_parent"
                         android:id="@+id/validity_tv"
                         android:layout_weight="1"
                         android:hint="@string/new_offer_fragment_hint_validity"
                         android:phoneNumber="false"
                         android:layout_margin="1dp"
                         android:layout_marginTop="5dp"
                         android:paddingLeft="10dp"
                         android:gravity="center_vertical" />

                     <Button
                         android:layout_width="0dp"
                         android:layout_height="fill_parent"
                         android:text="@string/new_offer_fragment_date"
                         android:id="@+id/dateButton"
                         android:layout_weight="0.5" />
                 </LinearLayout>

                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="1dp"
                     android:background="@color/tabsScrollColor"></RelativeLayout>


                 <Spinner
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:id="@+id/typeContract"
                     android:layout_weight="1.2"
                     android:layout_margin="1dp" />

                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="1dp"
                     android:background="@color/tabsScrollColor"></RelativeLayout>


                     <Spinner
                         android:layout_width="fill_parent"
                         android:layout_height="0dp"
                         android:id="@+id/spinnerDuration"
                         android:layout_weight="1.2" />


                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="1dp"
                     android:background="@color/tabsScrollColor"></RelativeLayout>

                 <EditText
                     android:layout_width="fill_parent"
                     android:layout_height="0dp"
                     android:id="@+id/offerLocation"
                     android:layout_weight="1"
                     android:hint="@string/new_offer_fragment_hint_location"
                     android:backgroundTint="@android:color/white"
                     android:singleLine="true"
                     android:maxLines="1"
                     android:background="@null"
                     android:layout_margin="1dp"
                     android:layout_marginLeft="5dp"
                     android:layout_marginRight="5dp"
                     android:paddingLeft="10dp" />



                 <RelativeLayout
                     android:layout_width="fill_parent"
                     android:layout_height="1dp"
                     android:background="@color/tabsScrollColor"></RelativeLayout>

               <LinearLayout
                   android:layout_width="fill_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1.2"
                   android:orientation="horizontal">

                   <Spinner
                       android:layout_width="0dp"
                       android:layout_height="fill_parent"
                       android:id="@+id/spinnerSalary"
                       android:layout_weight="1" />

                   <RelativeLayout
                       android:layout_width="1dp"
                       android:layout_height="fill_parent"
                       android:background="@color/tabsScrollColor"></RelativeLayout>

                   <EditText
                       android:layout_width="0dp"
                       android:layout_height="fill_parent"
                       android:inputType="number"
                       android:id="@+id/offerSalary"
                       android:layout_weight="1"
                       android:ems="10"
                       android:hint="@string/new_offer_fragment_hint_salary"
                       android:backgroundTint="@android:color/white"
                       android:maxLines="1"
                       android:singleLine="true"
                       android:background="@null"
                       android:layout_margin="1dp"
                       android:layout_marginLeft="5dp"
                       android:paddingLeft="5dp" />


               </LinearLayout>



             </LinearLayout>
            </android.support.v7.widget.CardView>




            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/new_offer_fragment_Description"
                android:id="@+id/newOffer_tv3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />



            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/CardDescription"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                card_view:cardCornerRadius="4dp">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/DescriptionText"
                        android:hint="Description up to 500 words"
                        android:gravity="top"
                        android:maxLength="500"
                        android:background="@null"
                        android:backgroundTint="@android:color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:id="@+id/countCharacter"
                        android:layout_gravity="bottom|right"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="5dp" />

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_AddTag"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:elevation="2dp"
                android:layout_marginTop="5dp">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">


                    <MultiAutoCompleteTextView
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:hint="@string/new_offer_fragment_hint_tags"
                        android:id="@+id/tagAutoComplete_tv"
                        android:layout_weight="1"
                        android:background="@null"
                        android:backgroundTint="@android:color/white"
                        android:lines="1"
                        android:singleLine="true"/>

                    <ImageButton
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:id="@+id/addTagButton"
                        android:layout_weight="0.25"
                        android:background="@android:color/darker_gray"
                        android:src="@drawable/ic_plus_white" />


                </LinearLayout>



            </android.support.v7.widget.CardView>
            <GridLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnCount="2"
                android:id="@+id/tagContainder"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></GridLayout>>



        </LinearLayout>
    </ScrollView>

<Button
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="5dp"
    android:id="@+id/publishOfferbutton"
    android:text="@string/new_offer_fragment_button"
    android:background="@color/tabsScrollColor"
    android:textColor="@android:color/white"/>
</LinearLayout>
